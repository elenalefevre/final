<h3 class="page-header">
  All Venues in <%= @city.name %>
  <span class="pull-right">
    <%= link_to "New Venue", new_venue_path, class: 'btn btn-sm btn-success' %>
  </span>
</h3>
<div class="row">
  <% @city.venues.each do |venue| %>
    <div class="col-sm-12 col-md-4">
      <div class="thumbnail">
        <%= link_to image_tag(venue.image), venue %>
        <div class="caption">
          <h3><%= link_to venue.name, venue %></h3>
        </div>
        <li><%= link_to "Edit", edit_venue_path(venue) %> <%= link_to "Delete", venue_path(venue), method: :delete, data: { confirm: 'Are you sure you want to delete this venue from the database?' } %>
        </li>
      </div>
    </div>
  <% end %>  
</div>