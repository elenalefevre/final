<%= form_for @venue do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :city_id %>
    <%= form.collection_select :city_id, City.order(:name), :id, :name, { include_blank: true }, { class: "form-control" } %>
  </div>
  <%= form.button 'Create Venue', class: "btn btn-success" %>
<% end %>